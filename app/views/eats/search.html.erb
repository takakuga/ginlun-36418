<div class="main">
  <div class="inner">
    <div class="form__wrapper">
    <h2 class="page-heading">検索結果</h2>
    <% if user_signed_in? %>
  <% @eats.reverse.each do |eat| %>
   <% if current_user.already_gooded?(eat) %>
        <%= link_to eat_good_path(eat.id, eat), method: :delete do %>
        <i class="fas fa-heart"></i> 
        <% end %>
        <%= eat.goods.count %>
        <% else %>
        <%= link_to eat_goods_path(eat), method: :post do %>
       <i class="far fa-heart"></i>
        <% end %>
        <%= eat.goods.count %>
         <% end %>
    <%= render partial: "eat", locals: { eat: eat } %>
          <% end %>
      <% end %>
    
</div>