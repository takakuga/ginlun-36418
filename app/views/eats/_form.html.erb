<%= form_with model: @eat, local: true do |f|%>
  <div class="field">
    <%= f.label :ランチのタイトル %><br />
    <%= f.text_field :title, id:"eat_title" %>
  </div>

  <div class="field">
    <%= f.label :店名 %><br />
    <%= f.text_field :shop_name, id:"eat_shop_name" %>
  </div>

  <div class="field">
    <%= f.label :カテゴリー %><br />
    <%= f.text_field :category, id:"eat_category" %>
  </div>

  <div class="field">
    <%= f.label :値段 %><br />
    <%= f.text_field :price, id:"eat_price" %>
  </div>

  <div class="field">
    <%= f.label :詳細 %><br />
    <%= f.text_area :detail, class: :form__text, id:"eat_detail" %>
  </div>

  <div class="field">
    <%= f.label :ランチの画像 %><br />
    <%= f.file_field :image, id:"eat_image" %>
  </div>

  <div class="actions">
    <%= f.submit "保存する", class: :form__btn  %>
  </div>
<% end %>